div.wrapper(ng-controller='NavbarCtrl')
  div.navbar
    div.container
      a.navbar-brand(href="/", ng-hide="isActive('/admin')") BeepBoop
      a.navbar-brand(href="javascript:window.history.back();", ng-show="isActive('/admin')")
        i.fa.fa-arrow-left
      ul.nav.navbar-right
        li(ng-class='{active: isActive("/reviews")}')
          a(href="/")
            i.fa.fa-eye
            |  Reviews
        li(ng-class='{active: isActive("/discover")}')
          a(href="/discover")
            i.fa.fa-globe
            |  Discover
        li(ng-class='{active: isActive("/about")}')
          a(href="/about")
            i.fa.fa-question-circle
            |  About
        li(ng-hide="isLoggedIn", ng-class='{active: isActive("/login")}')
          a(href="/login") Login
        li(ng-show="isLoggedIn")
          a(href="javascript:")
            i.fa.fa-bars
          ul.drop-down
            li Welcome, {{currentUser.name}}
            li
              a(href="/admin/posts") Manage posts
            li
              a(href="/admin/users") Manage users
            li
              a(href="javascript:", ng-click="logout()") Logout
