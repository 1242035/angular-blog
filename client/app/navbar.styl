.fixed
	position fixed
	top 0
	left 0
	right 0
	z-index 100
	.navbar
		background rgba(50,50,50,.9)
		box-shadow 0 2px 2px rgba(0,0,0,.2)

.navbar
	margin 20px 0
	height 60px
	background rgb(50,50,50)
	color rgba(255,255,255,.8)
	line-height 60px
	font-size 14px
	position relative
	z-index 100
	.navbar-brand
		float left
	a
		padding 0 25px
		color rgba(255,255,255,.8)
		text-decoration none
		display block
		&:hover
			color white
	ul
		margin 0
		padding 0
		list-style none
		&.nav
			&.navbar-right
				float right
			& > li
				float left
				position relative
				transition all linear .2s
				&:hover, &.active
					background $highlight
				&:hover ul.dropdown
					display block
		&.dropdown
			min-width 100%
			background $highlight
			white-space nowrap
			position absolute
			display none
			right 0
			top 100%
			li
				display block
				&:first-child a
					border-top none
				&:hover
					background $highlight_dark
				a
					border-top 1px solid $highlight_dark
