.wrapper
	width 800px
	margin 0 auto

.navbar
	margin 20px 0
	height 60px
	padding 0 15px 0 30px
	background rgb(50,50,50)
	color rgba(255,255,255,.8)
	line-height 60px
	font-size 14px
	position relative
	z-index 100
	.navbar-brand
		float left
	a
		color rgba(255,255,255,.8)
		text-decoration none
		&:hover
			color white
	ul
		margin 0
		padding 0
		list-style none
		&.nav
			margin 0
			padding 0
			list-style none
			&.navbar-right
				float right
			& > li
				float left
				position relative
				transition all linear .2s
				& > a
					padding 0 20px
					display block
					&:before
						content ''
						display inline-block
						margin 15px 0
						width 1px
						height 30px
						background rgb(20,20,20)
						position absolute
						left 0
				&:hover, &.active
					background $highlight
				&:hover ul.drop-down
					display block
				&:hover a:before, &:first-child a:before
					display none
				ul.drop-down
					min-width 100%
					background $highlight
					white-space nowrap
					position absolute
					display none
					right 0
					top 100%
					li
						padding 0 20px
						display block
						&:first-child a
							border-top none
						&:hover
							background $highlight_dark
						a
							border-top 1px solid $highlight_dark
							display block
