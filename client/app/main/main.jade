div(ng-include='"components/navbar/navbar.html"')

div.wrapper(style="width: 806px;")
	div.tile(ng-repeat="review in reviews", class="{{ $index == 0 ? review.type + ' big' : review.type }}")
		a.item(href="/some-review-item")
			div.cover(style="background-image: url('{{review.cover}}');")
			div.content.bottom
				div.platforms
					h1
						i(ng-repeat="platform in review.platforms", class="fa fa-{{platform}}", style="margin-right: 10px;")
				h1 {{review.title}}
				p {{review.description | limitTo: 100}}...

