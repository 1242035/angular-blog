.fixed(ng-include='"components/navbar/navbar.html"')

#cover.cover.fill(style="z-index: 0; background-image: url('{{post.cover}}'); position: fixed;")
.wrapper
	.page(style="margin-top: 50vh; z-index: 10; position: relative;")
		.content
			.section
				img(src="assets/images/platforms/windows-dark.png", height="48")
			.section
				h1 {{post.title}}
			.section
				p(ng-bind-html="post.content")
			.section(align="left")
				form(ng-submit="addComment(comment)")
					div Add a comment
					input(type="text", ng-model="comment.content")
			.section(align="left")
				p(ng-repeat="i in comments")
					span {{$index + 1}}. {{i.name}}
					br
					span {{i.content}}
