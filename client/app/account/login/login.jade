div(ng-include='"components/navbar/navbar.html"')

.wrapper
  .page.dark.no-shadow
    form.vertical-form(ng-submit='login()', novalidate='')
      .row.group
        label Login
      .row
        label Email
        input.value(type='text', placeholder='Your e-mail', ng-model='user.email')
      .row
        label Password
        input.value(type='password', placeholder='Your password', ng-model='user.password')
      .row
        button(type="submit") Login
