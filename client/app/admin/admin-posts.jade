div(ng-include='"components/navbar/navbar.html"')

.wrapper
  div(style="margin-bottom: 15px;")
    h2
      | Blog posts 
      span(style="font-size: 15px;")
        | (displaying {{filtered.length}}/{{posts.length}} items) 
        a.tag(href="/admin/posts/add", style="float: right;")
          i.fa.fa-plus
          |  New post
    input(type="text", placeholder="Filter blog posts...", ng-model="filter.title")
  .page.dark.no-shadow
    .vertical-form
      .row(ng-repeat="post in filtered = (posts | filter:filter)", style="padding-right: 0")
        a(href="/admin/posts/edit/{{post._id}}", style="text-decoration: none;") {{post.title}}
        .group.right
          a.toggle(href="javascript:", ng-click="toggleFeatured(post)", ng-class="{disabled: !post.featured}")
            i.fa.fa-star
          a.toggle(href="javascript:", ng-click="togglePublished(post)", ng-class="{disabled: !post.published}")
            i.fa.fa-eye
          a.toggle.danger(href="javascript:")
            i.fa.fa-trash
