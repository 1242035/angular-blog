input, select
	min-width 300px

.tag
	margin 0 2px 2px 0
	padding 5px 12px
	display inline-block
	background #5093E1
	border-radius 20px
	border none
	outline none
	font-size 13px
	color white
	text-decoration none

.button
	margin 0
	padding 10px 18px
	display inline-block
	background #5093E1
	border none
	outline none
	font-size 13px
	color white
	text-decoration none
.button-link
	font-size 13px
	color #5093E1
	text-decoration none
	display block

.block
		width 100%
		display block

.bottom
	position absolute
	bottom 0
	left 0
	right 0
	
.sidebar
	width 60px
	background #1B2224
	.sidebar-item
		width 60px
		height 60px
		display block
		text-align center
		line-height 60px
		font-size 20px
		color #616E71
		&:hover
			background #20282A
			color white
		&.selected
			background rgb(250,250,250)
			color #1B2224
			
.list
	width 350px
	background rgb(250,250,250)
	overflow auto
	.list-item
		margin 0
		padding 18px 25px
		font-size 14px
		color #242D2F
		display block
		text-decoration none
		text-overflow ellipsis
		white-space nowrap
		overflow hidden
		position relative
		&:hover, &.selected
			background rgb(240,240,240)
		&.separator
			border-bottom 1px solid rgb(230,230,230)
		.list-title, .list-subtitle
			color #242D2F
			display block
		.list-title
			font-size 15px
		.list-subtitle
			font-size 12px
			opacity .5
		.list-more
			color #E97F02
			display inline-block
			position absolute
			top 18px
			right 20px
			
.detail
	padding 30px 50px
	background white
	overflow auto
	.detail-title
		margin 20px 0 5px 0
		font-size 13px
		display block

#admin
	
	.sidebar, .list, .detail
		display block
		position absolute
	
	.sidebar
		left 0
		top 0
		bottom 0
		
	.list
		left 60px
		top 0
		bottom 0
		
	.detail
		left 410px
		right 0
		top 0
		bottom 0
